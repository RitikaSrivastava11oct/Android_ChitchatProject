<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s4"
    tools:context="com.example.android.chitchat.details">

    <TextView
        android:id="@+id/textview_my_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="My Profile"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/fname_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textview_my_profile"
        android:layout_margin="25dp" />

    <TextView
        android:id="@+id/lname_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/fname_details"
        android:layout_margin="25dp" />


    <TextView
        android:id="@+id/uname_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/lname_details"
        android:layout_margin="25dp" />

    <TextView
        android:id="@+id/status_details"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/uname_details"
        android:layout_margin="25dp" />


